{
  "name": "hed-mcp-typescript",
  "version": "1.0.0",
  "description": "Model Context Protocol (MCP) server for HED (Hierarchical Event Descriptor) validation. Provides tools for validating HED strings, TSV files, and sidecar files through a standardized MCP interface.",
  "main": "dist/server.js",
  "bin": {
    "hed-mcp-server": "dist/server.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/server.js",
    "start:http": "node dist/http-server.js",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false"
  },
  "keywords": [
    "mcp",
    "hed",
    "validation",
    "typescript",
    "bids",
    "neuroscience",
    "model-context-protocol",
    "hierarchical-event-descriptor"
  ],
  "author": "VisLab",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/VisLab/hed-mcp-typescript.git"
  },
  "bugs": {
    "url": "https://github.com/VisLab/hed-mcp-typescript/issues"
  },
  "homepage": "https://github.com/VisLab/hed-mcp-typescript#readme",
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.15",
    "jest": "^30.0.4",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.4.0",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.16.0",
    "hed-validator": "github:hed-standard/hed-javascript",
    "zod": "^3.25.76"
  }
}
